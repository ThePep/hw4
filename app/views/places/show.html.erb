<h1><%= @place.name %></h1>

<p>
  <button type="button" class="btn btn-outline-secondary"><b><a href="/posts/new?place_id=<%= @place.id %>">New Post</a></button>
</p>
<div class="container-fluid">
  <div class="row"> 
    <% for post in @place.posts %>
    <div class="col-md-3 col-sm-6">
    <h3><%= post.title %></h3>
    <h4><%= post.posted_on %></h4>
    <p><%= post.description %></p>
    </div>
  <% end %>
  </div>
</div>
